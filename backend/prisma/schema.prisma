generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
}

model CategoryType {
  id    String @id @default(uuid())
  code  String @unique
  label String

  categories Category[]
}

model Category {
  id    String   @id @default(uuid())
  code  String   @unique
  name  String
 
  typeId String?
  type   CategoryType? @relation(fields: [typeId], references: [id])
  
  products Product[]
}

model Product {
  id         String   @id @default(uuid())
  code       String   @unique
  name       String
  description String?
  price      Float
  quantity   Int
  createdAt  DateTime @default(now())

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
}
